{
    "name": "natsume-simple",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/nix:1": {
            "multiUser": true,
            "version": "latest",
            "extraNixConfig": "experimental-features = nix-command flakes,keep-outputs = true,keep-derivations = true"
        },
        "ghcr.io/christophermacgown/devcontainer-features/direnv:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "mkhl.direnv",
                "ms-python.python",
                "svelte.svelte-vscode",
                "oven.bun-vscode",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "bradlc.vscode-tailwindcss",
                "svelte.svelte-vscode",
                "eamodio.gitlens",
                "editorconfig.editorconfig",
                "antfu.iconify",
                "hyoban.tailwindcss-classname-highlight",
                "jnoortheen.nix-ide",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                "python.defaultInterpreterPath": ".venv/bin/python3"
            }
        }
    },
    "updateContentCommand": "direnv reload",
    "onCreateCommand": {
        "direnv-hook": "eval $(direnv hook bash) && direnv allow"
    },
    "runArgs": [
        "--userns=keep-id"
    ],
    "containerEnv": {
        "HOME": "/home/vscode"
    }
}
